@model GetOrganizationModel
@{
    ViewData["Title"] = "Add new organization";
    ViewData["ActivePage"] = ManageFacilitiesPages.DownloadOrganizations;
}
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form class="needs-validation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminNodeOrganizationDto.OrganizationDto.Name">Organization name</label>
                <input class="form-control" placeholder="Organization name" asp-for="AdminNodeOrganizationDto.OrganizationDto.Name"/>
                <div>
                    <span class="text-danger" asp-validation-for="AdminNodeOrganizationDto.OrganizationDto.Name"></span>
                </div>
                <label asp-for="AdminNodeOrganizationDto.AddressDto.Country.Name">Country</label>
                <input class="form-control" placeholder="Country" asp-for="AdminNodeOrganizationDto.AddressDto.Country.Name"/>
                <div>
                    <span class="text-danger" asp-validation-for="AdminNodeOrganizationDto.AddressDto.Country.Name"></span>
                </div>
                <label asp-for="AdminNodeOrganizationDto.AddressDto.City.Name">City</label>
                <input class="form-control" placeholder="City" asp-for="AdminNodeOrganizationDto.AddressDto.City.Name"/>
                <div>
                    <span class="text-danger" asp-validation-for="AdminNodeOrganizationDto.AddressDto.City.Name"></span>
                </div>
                <label asp-for="AdminNodeOrganizationDto.AddressDto.PostalCode.Number">Postal code</label>
                <input class="form-control" placeholder="Postal code" asp-for="AdminNodeOrganizationDto.AddressDto.PostalCode.Number"/>
                <div>
                    <span class="text-danger" asp-validation-for="AdminNodeOrganizationDto.AddressDto.PostalCode.Number"></span>
                </div>
                <input type="submit" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>
