@model UniqueRoomModel
@{
    ViewData["Title"] = "Add new Room";
    ViewData["ActivePage"] = ManageFacilitiesPages.DownloadAffiliates;
}
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form class="needs-validation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomDto.Number">Room number</label>
                <input class="form-control" placeholder="Room number" asp-for="RoomDto.Number"/>
                <div>
                    <span class="text-danger" asp-validation-for="RoomDto.Number"></span>
                </div>
                <label asp-for="RoomDto.Floor">Floor</label>
                <input class="form-control" placeholder="Floor number" asp-for="RoomDto.Floor"/>
                <div>
                    <span class="text-danger" asp-validation-for="RoomDto.Floor"></span>
                </div>
                <input type="hidden" asp-for="RoomDto.AffiliateId" value="@Model.RoomDto.AffiliateId"/>
                <input type="submit" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>
