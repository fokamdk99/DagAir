@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="" asp-controller="Facilities" asp-action="Organizations" title="Dashboard">Dashboard</a>
    </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" title="Manage">Hello @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="" asp-controller="Home" asp-action="Logout" method="post">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="" asp-controller="Home" asp-action="Privacy">Login</a>
    </li>
}
</ul>
