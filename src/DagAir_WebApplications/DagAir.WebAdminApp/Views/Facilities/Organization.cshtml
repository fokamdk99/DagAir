@model GetOrganizationModel
@{
    ViewData["Title"] = "See organizations";
    ViewData["ActivePage"] = ManageFacilitiesPages.DownloadOrganizations;
}
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <table>
            <tr>
                <th>Name</th>
                <th>Address</th>
            </tr>
            <tr>
                <td>@Model.OrganizationDto.Name</td>
                <td>@Model.OrganizationDto.AddressId</td>
            </tr>
        </table>
        <h4>Affiliates</h4>
        <ul class="nav nav-pills flex-column">
                    @foreach (var affiliate in Model.OrganizationDto.Affiliates)
                    {
                        <li>
                            @Html.ActionLink(affiliate.Name, "Affiliate", "Affiliates", new {affiliateId = affiliate.Id}, null)
                        </li>
                    }
                </ul>
    </div>
</div>